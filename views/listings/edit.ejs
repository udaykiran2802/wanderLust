<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3> Edit this listing </h3>
            <br>
    <form action="/listings/<%=listing._id  %>?_method=PUT" method="post" novalidate enctype="multipart/form-data" class="needs-validation">
        <div class="mb-3">
            <label for="title" class="from-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%=listing.title  %>" required>
            <div class="invalid-feedback">Title should be valid </div>
        </div>
        <div class="mb-3">
            <label for="description" class="from-label">Description</label>
            
            <input type="text"name="listing[description]" class="form-control" rows=5 value="<%=listing.description  %>" required >
            <div class="invalid-feedback">Please enter a short valid Description</div>  
        </div>
        <div class="mb-3">
            Past listing image   <br>
            <img src="<%= originalImageUrl  %>" alt="">
        </div>
        
        <div class="mb-3">
            <label for="title" class="from-label">Upload New Image </label>
            <input type="file" name="listing[image][url]" class="form-control" value="<%=listing.image.url %>"  >
            <!-- <div class="invalid-feedback">Image link should be valid </div> -->
        </div>
        <div class="mb-3">
            <select class="form-select form-select-sm mb-3"name="listing[category]" id="category" aria-label="Large select example">
                <option selected  >Open this select menu</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="mountains">Mountains</option>
                <option value="castles">castles</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="camping">Camping</option>
                <option value="farms">farms</option>
                <option value="arctic">arctic</option>
                <option value="domes">Domes</option>
                <option value="boats">Boats</option>
                <option value="rooms">Rooms</option>
              </select>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="from-label">Price</label>
            <input type="number" name="listing[price]" class="form-control" value="<%=listing.price  %>" required >
            <div class="invalid-feedback">Price should be valid </div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="location" class="from-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%=listing.location  %>" required >
            <div class="invalid-feedback">Location should be valid </div>
            </div>
        </div>
        
        
        <div class="mb-3">
            <label for="country" class="from-label">Country</label>
        <input type="text" name="listing[country]" class="form-control" value="<%=listing.country  %>" required >
        <div class="invalid-feedback">Country should be valid </div>
        </div>
       
        
        <button class="btn btn-dark edit-btn mt-3">edit</button>
    </form>
        </div>
    </div>
    
    
    
</body>
